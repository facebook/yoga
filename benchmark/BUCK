include_defs('//CSSLAYOUT_DEFS')

cxx_binary(
  name = 'benchmark',
  srcs = glob(['*.c']),
  headers = subdir_glob([('', '*.h')]),
  header_namespace = '',
  compiler_flags = [
    '-fno-omit-frame-pointer',
    '-fexceptions',
    '-Wall',
    '-Werror',
    '-O3',
    '-std=c11',
  ],
  deps = [
    csslayout_dep(':CSSLayout'),
  ],
  visibility = ['PUBLIC'],
)
